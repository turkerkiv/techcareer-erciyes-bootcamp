@model List<Bootcamp>

<p class="border-bottom text-center fs-1 fw-bold pb-3">Courses</p>

@foreach(var bt in @Model)
{
<div class="d-flex flex-column align-items-center border-bottom py-3">
    <p class="fs-6 fw-bold">Course ID: <span class="fw-normal">@bt.Id</span></p>
    <p class="fs-6 fw-bold">Course name: <span class="fw-normal">@bt.Name</span></p>
    <p class="fs-6 fw-bold">Course description: <span class="fw-normal">@bt.Desc</span></p>
</div>
}